{
  "compilerOptions": {
    "target": "es6",             // Версия JavaScript, в которую будет компилироваться TypeScript
    "types": ["vue"],
    "lib": ["esnext", "dom"],
    "module": "esnext",          // Модульная система
    "strict": true,              // Включить строгие проверки типов
    "esModuleInterop": true,     // Совместимость с CommonJS
    "skipLibCheck": true,        // Пропуск проверки типов в библиотеках
    "forceConsistentCasingInFileNames": true,  // Принудительное использование одинакового регистра в именах файлов
    "moduleResolution": "node",   // Использовать node-style разрешение модулей
    "baseUrl": ".",                  // Для удобных путей
    "paths": {                       // Опциональные алиасы для путей
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],            // Файлы, которые будут компилироваться
  "sourceMap": true,
  "exclude": ["node_modules"]    // Исключённые директории
}
